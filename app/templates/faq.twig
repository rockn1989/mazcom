{% extends "layouts/inside-page.twig" %}
{% set title="Полезная информация" %}
{% set bread = ["Главная", "Полезная информация"] %}
{% set activePosition = "6" %}
{% block content %}
<!-- begin faq -->
<div class="faq">
	<h1 class="title-h1">Полезная информация</h1>
	<div class="tabs-wrapper">
		<ul class="tabs" uk-switcher="connect:#tabs;swiping: false">
			<li><a href="#"><span class="tab__title">Все документы</span></a></li>
			<li class="uk-active"><a href="#"><span class="tab__title">Руководства</span></a></li>
			<li><a href="#"><span class="tab__title">Схемы</span></a></li>
			<li><a href="#"><span class="tab__title">ОТТС</span></a></li>
		</ul>
	</div>
	<ul id="tabs" class="uk-switcher">
		<li></li>
		<li>
			<ul class="doc-list uk-child-width-1-3@m uk-child-width-1-2@s" uk-grid>
				{% for item in 0..4 %}
				<li>
					<div class="item">
						<a href="#">
							<div class="item__img"><i class="icon-doc"></i></div>
							<div class="item__text">
								<div class="item__title">Руководства по эксплуатации и ремонту</div>
								<div class="item__subtitle">(.doc 1346 Кб)</div>
							</div>
						</a>
					</div>
				</li>
				{% endfor %}
			</ul>
		</li>
	</ul>
</div><!-- end faq -->
{% endblock %}
